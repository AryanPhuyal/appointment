<%-include('../layout/header.ejs')%>
</head>
<body>

    <%-include('../layout/admin-nav.ejs')%>

<div class="page-wrapper">
    <div class="content">
        <div class="row">
            <div class="col-sm-5 col-5">
                <h4 class="page-title"></h4>
            </div>
            <div class="col-sm-7 col-7 text-right m-b-30">
                <a href="/admin/add-hospital" class="btn btn-primary btn-rounded"><i class="fa fa-plus"></i> Add
                    Hospital</a>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="table-responsive">
                    <table class="table table-striped custom-table mb-0 ">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Hospital Name</th>
                                <th>Status</th>
                                <th class="text-right">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <%for(let i = 0;i<hospitals.length;i++){%>
                                <tr>
                                    <td><%=i+1%></td>
                                    <td><span class="custom-badge "><%=hospitals[i].hospitalName%></span></td>
                                    <td><a href="#"><span class="custom-badge <%=hospitals[i].status==="Active"?"status-green":"status-red"%>"><%=hospitals[i].status%></span></a></td>
                                    <td class="text-right">
                                        <div class="dropdown dropdown-action">
                                            <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i
                                                    class="fa fa-ellipsis-v"></i></a>
                                                    
                                            <div class="dropdown-menu dropdown-menu-right">
                                                <a class="dropdown-item" href="/admin/edit-hospital/<%=hospitals[i]._id%>"><i class="fa fa-pencil m-r-5"></i> Edit</a>
                                                <a class="dropdown-item" href="/admin/delete-hospital/<%=hospitals[i]._id%>" data-toggle="modal"><i
                                                        class="fa fa-trash-o m-r-5"></i>
                                                    Delete</a>
                                            </div>
                                        </div>
                                    </td>
                                </tr>

                                <%}%>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    </div>
<%-include('../layout/tail.ejs')%>

    